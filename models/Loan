const { DataTypes } = require('sequelize');
const sequelize = require('../config/database');

const Loan = sequelize.define('Loan', {
  user_id: {
    type: DataTypes.INTEGER
  },
  book_id: {
    type: DataTypes.INTEGER
  },
  loan_date: {
    type: DataTypes.DATE
  },
  return_date: {
    type: DataTypes.DATE
  },
  status: {
    type: DataTypes.ENUM,
    values: ['active', 'completed', 'overdue'],
    defaultValue: 'active'
  }
});

module.exports = Loan;
